{
    "name": "program-editor-frontend",
    "version": "0.0.1",
    "description": "This is the shit!",
    "scripts": {
        "build-coffee": "coffee -o toolset/compiled/js/ -c sources/source/*/*.coffee",
        "watch-coffee": "coffee -o toolset/compiled/js/ -cw sources/source/*/*.coffee",
        "ncu-update": "ncu -u",
        "update-packages": "run-s -ns ncu-update install",
        "postinstall": "npm run initialize-thingy",
        "initialize-thingy": "run-s -ns patch-stuff create-compile-folders build copyscript",
        "build-js": "run-s -ns build-coffee bundle",
        "watch-js": "run-p -nsr watch-coffee watch-bundle",
        "bundle": "webpack-cli --config webpack.config.js",
        "watch-bundle": "webpack-cli --config webpack-watch.config.js",
        "build-styl": "stylus sources/source/index/index.styl -o toolset/compiled/css/",
        "watch-styl": "stylus sources/source/index/index.styl -o toolset/compiled/css/ -w",
        "build-index-pug": "pug -o output/ sources/source/index/index.pug",
        "watch-index-pug": "pug -o output/ sources/source/index/index.pug -w",
        "test": "run-s -ns build watch",
        "build": "run-s -ns build-styl build-js build-index-pug",
        "watch": "run-p -nsr watch-js watch-styl watch-index-pug ui-sync",
        "release": "run-s -ns initialize-thingy release-script",
        "ui-sync": "browser-sync start --server 'output/' --files 'output/index.html' --no-open",
        "release-script": "toolset/thingy-build-system/website/release-script.sh",
        "patch-stuff": "sources/patches/patch-stuff.sh",
        "copyscript": "sources/ressources/copyscript.sh",
        "create-compile-folders": "toolset/thingy-build-system/website/create-compile-folders.sh",
        "push": "toolset/thingy-build-system/website/add-commit-and-push-all-repos.sh",
        "pull": "toolset/thingy-build-system/website/pull-all.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JhonnyJason/program-editor-frontend.git"
    },
    "author": "Lenard Frommelt",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/JhonnyJason/program-editor-frontend/issues"
    },
    "homepage": "https://github.com/JhonnyJason/program-editor-frontend#readme",
    "dependencies": {
        "coffeescript": "^2.4.1",
        "npm-check-updates": "^3.1.23",
        "npm-run-all": "^4.1.5",
        "browser-sync": "^2.26.3",
        "pug-cli": "^1.0.0-alpha6",
        "stylus": "^0.54.5",
        "webpack": "^4.29.0",
        "webpack-cli": "^3.2.1",
        "fastclick": "^1.0.6",
        "gsap": "^2.0.2"
    }
}
